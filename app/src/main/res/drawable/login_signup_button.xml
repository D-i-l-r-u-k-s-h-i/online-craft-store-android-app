<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <corners
                android:radius="22dp" />

            <solid
                android:color="@color/colorBlack" />

            <stroke
                android:color="@color/colorBlack"
                android:width="2dp" />

            <size
                android:width="285dp"
                android:height="45dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <corners
                android:radius="22dp" />

            <solid
                android:color="#317589" />

            <stroke
                android:color="@color/colorBlack"
                android:width="2dp" />

            <size
                android:width="285dp"
                android:height="45dp" />

        </shape>
    </item>
</selector>