<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mImageIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/craftNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="CraftName"
                android:textColor="@color/colorBlueDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/creatorTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|end"
                android:text="Creator"
                android:textColor="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/availabilityTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="availability"
                android:textColor="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/shortDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Description"
                android:textColor="@color/colorTheme"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/longDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long Description" />

            <TextView
                android:id="@+id/priceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Price"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/addToCartBtn"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    app:srcCompat="@drawable/ic_add_shopping_cart_24dp" />

                <Button
                    android:id="@+id/buyBtn"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/small_button"
                    android:text="Buy"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_delete_24dp" />

                <ImageView
                    android:id="@+id/editBtn"
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_edit_24dp" />

                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    app:srcCompat="@drawable/ic_share_black_24dp" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>